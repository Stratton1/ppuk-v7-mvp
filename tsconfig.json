{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": ["./frontend/src/*"]
    }
  },
  "include": [
    "frontend/src/**/*",
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    "vitest.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "frontend/.next",
    "frontend/out",
    "frontend/build"
  ]
}

